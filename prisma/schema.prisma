generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String    @id
  name      String
  email     String    @unique
  password  String?
  createdAt DateTime  @default(now())

  provider  String?   @default("local")
  providerId String?

  resetOtp  String?   @default("")
  resetOtpExpiry DateTime?

  chats     Chat[]
  messages  Message[]
}

model Chat {
  id        String    @id @default(uuid())
  title     String    @default("New Chat")
  createdAt DateTime  @default(now())

  userId    String
  user      User      @relation(fields: [userId], references: [id])

  messages  Message[]
}

model Message {
  id        String    @id @default(uuid())
  role      String    @default("user") // "user" | "assistant" | "system"
  content   String    @map("text")
  createdAt DateTime  @default(now())

  chatId    String
  userId    String

  chat      Chat      @relation(fields: [chatId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
}
